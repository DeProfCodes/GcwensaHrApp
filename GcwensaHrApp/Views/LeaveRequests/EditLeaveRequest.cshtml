@using GcwensaHrApp.Enums;
@model GcwensaHrApp.ViewModels.LeaveRequestViewModel

@{
    ViewData["Title"] = "EditLeaveRequest";
}

<h1>EditLeaveRequest</h1>

<h4>LeaveRequestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLeaveRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaveId" />
            <div class="form-group">
                <label asp-for="LeaveType" class="control-label"></label>
                <select asp-for="LeaveType" class="form-control">
                    <option value="@LeaveType.Sick">@LeaveType.Sick.GetDisplayName()</option>
                    <option value="@LeaveType.Maternity">@LeaveType.Maternity.GetDisplayName()</option>
                    <option value="@LeaveType.FamilyResponsibility">@LeaveType.FamilyResponsibility.GetDisplayName()</option>
                    <option value="@LeaveType.Other">@LeaveType.Other.GetDisplayName()</option>
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveStartDate" class="control-label"></label>
                <input asp-for="LeaveStartDate" class="form-control" />
                <span asp-validation-for="LeaveStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveEndDate" class="control-label"></label>
                <input asp-for="LeaveEndDate" class="form-control" />
                <span asp-validation-for="LeaveEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveReason" class="control-label"></label>
                <input asp-for="LeaveReason" class="form-control" />
                <span asp-validation-for="LeaveReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
