@model GcwensaHrApp.ViewModels.Account.RegisterViewModel

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@{
    ViewData["Title"] = "Register - Gcwensa Telecoms";
}

<div id="PageContainer">
    <div class="row" id="PageFormContainer">
        <h1 class="w-100 text-center fs-10">Please Signup</h1>
        <div class="w-100" style="margin-top:20px">
            <section>
                <form asp-action="Login" id="account" method="post" onsubmit="ButtonLoader()">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="fs-4">*Username</label>
                        <input asp-for="Username" class="form-control txtBox-3 custom-Input-Box1 fs-4" placeholder="USERNAME" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="fs-4">*Firstname</label>
                        <input asp-for="Firstname" class="form-control txtBox-3 custom-Input-Box1 fs-4" placeholder="USERNAME" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="fs-4">*Lastname</label>
                        <input asp-for="Lastname" class="form-control txtBox-3 custom-Input-Box1 fs-4" placeholder="USERNAME" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div
                    <di class="form-group">
                        <label class="fs-4">*Email</label>
                        <input asp-for="Email" class="form-control txtBox-3 custom-Input-Box1 fs-4" placeholder="USERNAME" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </di>
                    <div class="form-group">
                        <label class="fs-4">*Password</label>
                        <div style="display:flex">
                            <input asp-for="Password" class="form-control txtBox-3 custom-Input-Box1 fs-4" id="password-field" type="password" placeholder="PASSWORD" />
                            <span toggle="#password-field" class="fa fa-eye field-icon toggle-password" style="margin-left: -30px;margin-top: 10px;color:silver"></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="fs-4">*Confirm Password</label>
                        <div style="display:flex">
                            <input asp-for="ConfirmPassword" class="form-control txtBox-3 custom-Input-Box1 fs-4" id="PasswordConfirm" type="password" placeholder="PASSWORD" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary fs-5 txtBox-8" id="LoginBtn" data-loading-text="<i class='fa fa-spinner fa-spin '></i>Loading..." onclick="ButtonLoader()" style="color:#005AEE;border-color:#005AEE">Submit</button>
                    </div>
                    <div class="form-group text-center">
                        <p class="fs-4">
                            Already have an account? <a class="fs-4 brandColor2" onclick="OpenLoginPage()" id="NoAccount" style="cursor:pointer">Login</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<script>

    $(document).ready(function ()
    {
        //location.reload();
        $("#MainPageLoader").hide();
    });

    $(".toggle-password").click(function ()
    {
        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        var pwdCnf = $("#PasswordConfirm");
        if (input.attr("type") == "password")
        {
            input.attr("type", "text");
            pwdCnf.attr("type", "text");
        }
        else
        {
            input.attr("type", "password");
            pwdCnf.attr("type", "password");
        }
    });

    function LoginLoader()
    {
        $("#MainPageLoader").show();
    }

    function ButtonLoader()
    {
        var $this = $(this);
        $this.button('loading');
        setTimeout(function ()
        {
            $this.button('reset');
        }, 8000);
    }

    function OpenRegistrationPage()
    {
        var url = '@Url.Action("Register","Account")';
        window.location = url;
    }

    function OpenLoginPage()
    {
        var url = '@Url.Action("Login","Account")';
        window.location = url;
    }

</script>