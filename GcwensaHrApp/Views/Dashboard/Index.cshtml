@using GcwensaHrApp.Enums;
@model GcwensaHrApp.ViewModels.DashboardViewModel


<div class="container">
    <div class="row">
        <div class="text-center">
            <p>Welcome @Model.UserDetails.Firstname @Model.UserDetails.Lastname</p>
        </div>
    </div>
    <div class="row">
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Date</td>
                        <td>Leave Type</td>
                        <td>Start Date</td>
                        <td>End Date</td>
                        <td>Duration</td>
                        <td>Description</td>
                        <td>Status</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var leaveReq in Model.LeaveRequests)
                    {
                        <tr>
                            <td>@leaveReq.CreateTime.ToString("dd/MM/yyyy")</td>
                            <td>@leaveReq.LeaveType.GetDisplayName()</td>
                            <td>@leaveReq.LeaveStartDate.ToString("dd/MM/yyyy")</td>
                            <td>@leaveReq.LeaveEndDate.ToString("dd/MM/yyyy")</td>
                            <td>@leaveReq.LeaveDaysDuration</td>
                            <td>@leaveReq.LeaveReason</td>
                            <td>@leaveReq.LeaveStatus.GetDisplayName()</td>
                            <td>
                                <div style="display:flex">
                                    <button class="btn btn-primary" onclick="window.location='@Url.Action("EditLeaveRequest","LeaveRequests")?leaveId=@leaveReq.Id'">Edit</button>
                                    <button class="btn btn-danger" onclick="window.location='@Url.Action("CancelLeaveRequest","LeaveRequests")?leaveId=@leaveReq.Id'" style="margin-left:15px">Cancel Leave</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-success" onclick="window.location='@Url.Action("CreateLeaveRequest","LeaveRequests")'">Create Leave</button>
        <button class="btn btn-info" onclick="window.location='@Url.Action("UsersManagement","UserDetails")'" style="margin-left:15px">Users Management</button>
    </div>
</div>